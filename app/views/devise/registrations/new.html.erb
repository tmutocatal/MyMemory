<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<div class = "form">
	  <%= devise_error_messages! %>
	  <div class="group"><%= f.label :email, :class => "label" %><br />
		  <%= f.email_field :email, :autofocus => true, :class => "text_field" %></div>

	  <div class="group"><%= f.label :password, :class => "label"  %><br />
	  <%= f.password_field :password, :class => "text_field" %></div>

  	  <div class="group"><%= f.label :password_confirmation, :class => "label" %><br />
	  <%= f.password_field :password_confirmation, :class => "text_field" %></div>

	  <div class="group"><%= f.submit "Sign up", :class => "button" %></div>
</div>
<% end %>

<%= render "devise/shared/links" %>
